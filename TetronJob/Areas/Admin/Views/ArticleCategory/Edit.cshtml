@model Framework.CQRS.Command.Admin.ArticleCategory.UpdateArticleCategoryCommand
@{
    ViewData["Title"] = "ویرایش دسته بندی مقاله";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">
            مدیرت محتوا/
        </span> افزودن دسته بندی مقاله
    </h4>

    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.Alert != null)
            {
                <div class="alert alert-warning alert-dismissible d-flex align-items-center" role="alert">
                    <i class="bx bx-xs bx-wallet me-2"></i>
                    @ViewBag.Alert
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card mb-4">
                <h5 class="card-header heading-color">افزودن دسته بندی مقاله جدید</h5>
                <form asp-area="Admin" asp-controller="ArticleCategory" asp-action="Edit">
                    <div class="card-body">
                        <div>
                            <label class="form-label">نام دسته بندی مقاله</label>
                            <input asp-for="ArticleCategoryTitle" type="text" class="form-control" placeholder="نام دسته بندی مقاله " />
                            <span class="text-danger" asp-validation-for="ArticleCategoryTitle"></span>

                        </div>
                        <input type="hidden" asp-for="Id"/>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-sm btn-primary">ثبت</button>
                            <a asp-area="Admin" asp-controller="ArticleCategory" asp-action="Index" class="btn btn-sm btn-warning text-white">بازگشت</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


