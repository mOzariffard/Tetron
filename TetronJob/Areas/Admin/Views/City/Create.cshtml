@model Framework.ViewModels.City.InsertCityViewModel
@{
    ViewData["Title"] = "افزودن شهر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">
            موقعیت مکانی /
        </span> افزودن شهر
    </h4>

    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.Alert != null)
            {
                <div class="alert alert-warning alert-dismissible d-flex align-items-center" role="alert">
                    <i class="bx bx-xs bx-wallet me-2"></i>
                    @ViewBag.Alert
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card mb-4">
                <h5 class="card-header heading-color">افزودن شهر جدید</h5>
                <form asp-area="Admin" asp-controller="City" asp-action="Create">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-12 mb-4">
                                <label class="form-label">نام شهر </label>
                                <input asp-for="Name" type="text" class="form-control" placeholder="نام شهر" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                                <input type="hidden" asp-for="ProvinceId" value="@ViewBag.Province"/>
                            </div>
                            
                            <div class="mt-3">
                                <button type="submit" class="btn btn-sm btn-primary">ثبت</button>
                                <a asp-area="Admin" asp-controller="City" asp-action="Index"
                                   asp-route-id="@ViewBag.Province"
                                   class="btn btn-sm btn-warning text-white">بازگشت</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>