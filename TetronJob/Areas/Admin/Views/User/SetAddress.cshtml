@model Framework.ViewModels.User.SetUserAddressViewModel
@{
    ViewData["Title"] = "نشانی کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">
           کاربران /
        </span> نشانی کاربر 
    </h4>

    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.Alert != null)
            {
                <div class="alert alert-warning alert-dismissible d-flex align-items-center" role="alert">
                    <i class="bx bx-xs bx-wallet me-2"></i>
                    @ViewBag.Alert
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card mb-4">
                <h5 class="card-header heading-color">نشانی کاربر</h5>
                <form asp-area="Admin" asp-controller="User" asp-action="SetAddress">
                    <div class="card-body">
                        <div class="col-md-6 col-12 mb-4">
                            <label  class="form-label">انتخاب استان</label>
                            <select onchange="LoadCity()" asp-for="ProvinceId" asp-items="@ViewBag.Provinces"
                                    class="form-select" id="province" >
                                <option selected="selected" disabled="disabled">یک استان انتخاب کنید</option>

                            </select>
                            <span class="text-danger" asp-validation-for="ProvinceId"></span>
                        </div>
                        
                        <input type="hidden" asp-for="UserId"/>
                        
                       @if (Model.ProvinceId != null)
                       {
                           <div class="col-md-6 col-12 mb-4">
                               <label  class="form-label">انتخاب شهر</label>
                               <select asp-for="CityId" class="form-select"
                                        id="city" asp-items="@ViewBag.SelectCities">
                                   <option selected="selected" disabled="disabled">یک شهر انتخاب کنید</option>

                               </select>
                               <span class="text-danger" asp-validation-for="CityId"></span>
                           </div>
                       }
                       else
                       {
                           <div class="col-md-6 col-12 mb-4">
                               <label  class="form-label">انتخاب شهر</label>
                               <select asp-for="CityId" class="form-select" 
                                       id="city" >
                                   <option selected="selected" disabled="disabled">یک شهر انتخاب کنید</option>

                               </select>
                               <span class="text-danger" asp-validation-for="CityId"></span>
                           </div>
                       }
                        
                        
                        


                        <div class="mt-3">
                            <button type="submit" class="btn btn-sm btn-primary">ثبت</button>
                            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-sm btn-warning text-white">بازگشت</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
