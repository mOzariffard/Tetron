@model Framework.CQRS.Command.Article.InsertArticleCommand
@{
    ViewData["Title"] = "افزودن مقاله";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">
            مدیریت محتوا /
        </span> افزودن مقاله
    </h4>

    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.Alert != null)
            {
                <div class="alert alert-warning alert-dismissible d-flex align-items-center" role="alert">
                    <i class="bx bx-xs bx-wallet me-2"></i>
                    @ViewBag.Alert
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card mb-4">
                <h5 class="card-header heading-color">افزودن مقاله جدید</h5>
                <form asp-area="Admin" asp-controller="Article" asp-action="Create" enctype="multipart/form-data">
                    <div class="card-body">








                        <div class="row">            
                            <div>
                                <div class="classic col col-sm-3 col-lg-2 mt-3">
                                    <img src="~/img/default.jpg" width="150" height="110" id="imagePath_1" />
                                    <label class="form-label mb-3">تصویر </label>
                                    <input  onchange="ChangeImage(this,1)"
                                            id="image_1" asp-for="ArticleImage" type="file" class="form-control"/>
                                    <span class="text-danger" asp-validation-for="ArticleImage"></span>
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-12 mb-4" >
                                <label class="form-label"> عنوان </label>
                                <input asp-for="ArticleTitle" type="text" class="form-control" placeholder="عنوان" />
                                <span class="text-danger" asp-validation-for="ArticleTitle"></span>

                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="TagifyBasic" class="form-label">برچسب ها</label>
                               <input asp-for="ArticleTags" id="TagifyBasic" class="form-control" tabindex="-1">
                            </div>

                      
                            <div class="col-md-6 col-12 mb-4">
                                <label for="TagifyBasic" class="form-label">دسته بندی مقالات</label>
                                <select asp-for="ArticleCategoryId" id="select2Basic" class="select2 form-select form-select-lg select2-hidden-accessible" asp-items="@ViewBag.Category"
                                        data-allow-clear="true" data-select2-id="select2Basic" tabindex="-1" aria-hidden="true">
                                  
                               
                                </select>
                            </div>

                      
                              <div class="form-group  col-12">
                                  <label>متن مقاله</label>
                                  <textarea id="maxlength-textarea" asp-for="ArticleBody" class="form-control ckeditor mt-2" maxlength="400" rows="8" placeholder="متن مقاله"></textarea>
                                  <span class="text-danger" asp-validation-for="ArticleBody"></span>
                              </div>
                         

                      

                            <div class="mt-3">
                                <button type="submit" class="btn btn-sm btn-primary">ثبت</button>
                                <a asp-area="Admin" asp-controller="Article" asp-action="Index" class="btn btn-sm btn-warning text-white">بازگشت</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
@section Style
    {
    <link rel="stylesheet" href="~/assets/vendor/libs/tagify/tagify.css">
    
    
    <link rel="stylesheet" href="~/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/assets/vendor/libs/typeahead-js/typeahead.css">
    <link rel="stylesheet" href="~/assets/vendor/libs/quill/typography.css">
    <link rel="stylesheet" href="~/assets/vendor/libs/quill/katex.css">
    <link rel="stylesheet" href="~/assets/vendor/libs/quill/editor-fa.css">
}
@section Scripts
    {    <script src="https://cdn.ckeditor.com/4.18.0/full/ckeditor.js"></script>
    <script src="~/assets/js/forms-tagify.js"></script>
    <script src="~/assets/js/forms-editors.js"></script>    <script src="~/assets/js/forms-file-upload.js"></script>
}
