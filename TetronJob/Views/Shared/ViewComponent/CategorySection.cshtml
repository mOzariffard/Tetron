@model IEnumerable<Framework.CQRS.Query.Admin.Category.Category>

    @foreach (var item in Model)
    {
        


        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 mt-1 mb-4">
            <a asp-controller="Advertising" asp-action="CategoryUser" asp-route-id="@item.Id">
                <div class="card card-bg p-2" 
                     style="background-image:url(/CategoryImage/@item.Image)">
                    <div class="card-body primary-font">
                    <div class="overlay justify-content-center" style="background-color: @item.Color;opacity: 0.7;">
                            <h5 class="text-white mb-5 p-3">
                               @item.Name
                            </h5>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }