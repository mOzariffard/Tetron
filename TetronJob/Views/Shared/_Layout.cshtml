<!DOCTYPE html>
<html lang="fa" class="light-style layout-menu-fixed" dir="rtl" data-theme="theme-default"
      data-assets-path="/assets/" data-template="horizontal-menu-template-no-customizer">

<head>
    <partial name="Partial/_HeadTags" />
    @await RenderSectionAsync("Style",false)
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-navbar-full layout-horizontal layout-without-menu">
        <div class="layout-container">
            <!-- Navbar -->
            <partial name="Partial/_Navbar" />
            <!-- / Navbar -->
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Menu -->
                    <partial name="Partial/_Menu" />
                    <!-- / Menu -->
                    <!-- Content -->

                    <div class="container-xxl flex-grow-1 container-p-y">
                        @RenderBody()







                    </div>

                    <partial name="Partial/_Footer" />
                    <!-- / Footer -->

                    <div class="content-backdrop fade"></div>
                </div>
                <!--/ Content wrapper -->
            </div>

            <!--/ Layout container -->
        </div>
    </div>

    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>

    <!-- Drag Target Area To SlideIn Menu On Small Screens -->
    <div class="drag-target"></div>

    <!--/ Layout wrapper -->
    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <partial name="Partial/_Scripts" />
    @await RenderSectionAsync("Script",false)
</body>

</html>